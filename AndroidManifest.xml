<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.blackpinguin.android.sindwirschonda"
    android:versionCode="236"
    android:versionName="0.7" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.CalcSpeedActivity"
            android:label="@string/calcSpeed"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.CalcDistanceActivity"
            android:label="@string/calcDistance"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.CalcTimeActivity"
            android:label="@string/calcTime"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.SelectSpeedActivity"
            android:label="@string/selectSpeed"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.SelectDistanceActivity"
            android:label="@string/selectDistance"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.SelectTimeActivity"
            android:label="@string/selectTime"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.MeasureSpeedActivity"
            android:label="@string/measureSpeed"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.MeasureDistanceActivity"
            android:label="@string/measureDistance"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        <activity
            android:name="de.blackpinguin.android.sindwirschonda.activities.MeasureTimeActivity"
            android:label="@string/measureTime"
            android:screenOrientation="portrait"
    		android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>
        
    </application>

</manifest>
